import pandas as pd
import matplotlib.pyplot as plt

# Load the dataset
file_path = "/mnt/data/transactions2.csv"
data = pd.read_csv(file_path)

# Parse dates and extract month and year
data['Date'] = pd.to_datetime(data['Date'], errors='coerce')
data['YearMonth'] = data['Date'].dt.to_period('M')

# Aggregate sales by month
monthly_sales = data.groupby('YearMonth')['Sales'].sum().reset_index()

# Plotting monthly sales trends
plt.figure(figsize=(10, 6))
plt.plot(monthly_sales['YearMonth'].astype(str), monthly_sales['Sales'], marker='o', linestyle='-')
plt.title('Monthly Sales Trends')
plt.xlabel('Month-Year')
plt.ylabel('Total Sales')
plt.xticks(rotation=45)
plt.grid(True)
plt.tight_layout()
plt.show()
